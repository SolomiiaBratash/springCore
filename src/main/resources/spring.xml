<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="com.bratash.spring.core.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="John Smith"/>
    </bean>

    <bean id="consoleEventLogger" class="com.bratash.spring.core.ConsoleEventLogger"/>

    <bean id="app" class="com.bratash.spring.core.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="consoleEventLogger"/>
        <constructor-arg ref="event"/>
        <constructor-arg ref="fileEventLogger"/>
    </bean>

    <bean id="event" class="com.bratash.spring.core.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean id="dateFormat" class="java.text.DateFormat" factory-method="getTimeInstance"/>
        </constructor-arg>
    </bean>

    <bean id="fileEventLogger" class="com.bratash.spring.core.FileEventLogger" init-method="init">
        <constructor-arg value="/MyPrograms/springCore/src/main/resources/LogFile"/>
    </bean>

</beans>